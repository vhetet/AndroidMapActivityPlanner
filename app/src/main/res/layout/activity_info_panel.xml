<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.vincent.activityplanner.InfoPanelActivity"
    android:gravity="bottom" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@color/white"
        android:layout_alignParentEnd="true"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:elevation="2dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_above="@+id/textView3"
            android:text="test2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/dateStart"
            android:text="test3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="Start"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/buttonDateStart"
            android:layout_alignParentBottom="@+id/buttonDateStart"
            android:layout_alignBottom="@+id/buttonDateStart"
            android:paddingBottom="10dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/dateStart"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:textSize="14dp"
            android:layout_toStartOf="@+id/buttonDateStart"
            android:layout_alignBottom="@+id/buttonDateStart" />

        <Button
            android:id="@+id/buttonDateStart"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:text="Date"
            android:ems="10"
            android:textSize="12dp"
            android:layout_toStartOf="@+id/timeStart"
            android:layout_alignBottom="@+id/timeStart" />

        <EditText
            android:id="@+id/timeStart"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:textSize="14dp"
            android:layout_toStartOf="@+id/buttonTimeStart"
            android:layout_alignBottom="@+id/buttonTimeStart" />

        <Button
            android:id="@+id/buttonTimeStart"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:text="Time"
            android:ems="10"
            android:textSize="12dp"
            android:layout_above="@+id/buttonTimeEnd"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="End"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/buttonDateEnd"
            android:layout_alignBottom="@+id/buttonDateEnd"
            android:paddingBottom="10dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/dateEnd"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:textSize="14dp"
            android:layout_toStartOf="@+id/buttonDateEnd"
            android:layout_alignBottom="@id/buttonDateEnd"/>

        <Button
            android:id="@+id/buttonDateEnd"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:text="Date"
            android:ems="10"
            android:textSize="12dp"
            android:layout_toStartOf="@+id/timeEnd"
            android:layout_alignBottom="@+id/timeEnd" />

        <EditText
            android:id="@+id/timeEnd"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:textSize="14dp"
            android:layout_toStartOf="@+id/buttonTimeEnd"
            android:layout_alignBottom="@+id/buttonTimeEnd" />

        <Button
            android:id="@+id/buttonTimeEnd"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:text="Time"
            android:ems="10"
            android:textSize="12dp"
            android:layout_above="@+id/ratingBar"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_alignBottom="@+id/ratingBar"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>